{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "dist/",
        "test/"
    ],
    "include": [
        "src/**/*"
    ],
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    }
}